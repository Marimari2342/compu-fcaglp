      PROGRAM COSENOCALCULO
C     declaracion de variables
      REAL X,SUM,TERM
      INTEGER M
      CHARACTER*20 ARCHIVO
      
C     pedido de datos al usuario
      WRITE(*,*) "Ingrese el valor de M:"
      READ(*,*) M
      WRITE(*,*) "Ingrese el nombre del archivo destino:"
      READ(*,*) ARCHIVO
      
C     abrir archivo
      OPEN(UNIT=10,FILE=ARCHIVO,ERR=15)

C     desarrollo del ejercicio
      WRITE(10,*) "Calculo de valor aproximando de cos(x)."
      WRITE(10,*) "Valor de X | Aprox cos(x)"
      DO I=0,15,5
         SUM=0
         TERM=1
         SUM=SUM+TERM
         X=I/10.
         DO J=1,M
            TERM = -TERM*X**2//(2.*N(2.*N-1))
            SUM = SUM+TERM
         ENDDO
         WRITE(10,100)X,SUM
      ENDDO
      
 15   WRITE(*,*) "Error al crear/escribir el archivo."
 100  FORMAT (F5.2,5X,F5.2)
      WRITE(*,*) "Archivo creado correctamente."
      CLOSE(10)
C     cerrar archivo
      END PROGRAM

      
